{
  "private": true,
  "name": "myjson",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A JSON parser written in typescript",
  "main": "index.js",
  "repository": "git@github.com:PatrickHollweck/Creative.git",
  "author": "Patrick Hollweck",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "review": "yarn build && yarn format && yarn lint && yarn test",
    "jestrunner.jestCommand": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.21.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-typescript"
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "singleQuote": false,
    "printWidth": 90,
    "tabWidth": 2
  }
}
